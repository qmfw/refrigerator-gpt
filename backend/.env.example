# OpenAI API Configuration
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# CORS Configuration
# Add your Flutter app origins (comma-separated)
# For development, you might use:
# - iOS Simulator: http://localhost:8080
# - Android Emulator: http://10.0.2.2:8000
# - Web: http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,http://10.0.2.2:8000

# Database Configuration (Required for Premium Features)
# SQLite (development - simple, no setup needed)
DATABASE_URL=sqlite:///./fridgegpt.db
# PostgreSQL (production - recommended: Supabase free tier)
# DATABASE_URL=postgresql://user:password@localhost:5432/fridgegpt

# App Store Receipt Verification (iOS)
# Get from: https://appstoreconnect.apple.com/access/integrations
# This is your App Store Connect Shared Secret for receipt validation
APPLE_SHARED_SECRET=your-apple-shared-secret-here
# Use sandbox for testing, production for live app
APPLE_ENVIRONMENT=sandbox
# Options: sandbox, production

# Google Play Receipt Verification (Android)
# Service Account JSON file path (for server-to-server verification)
# Get from: https://play.google.com/console/developers
GOOGLE_SERVICE_ACCOUNT_PATH=./google-service-account.json
# Or use API key (alternative method)
# GOOGLE_API_KEY=your-google-api-key-here
# Package name from your Android app
GOOGLE_PACKAGE_NAME=com.yourcompany.fridgegpt

# File Storage Configuration (Optional)
# Local storage directory for uploaded images
UPLOAD_DIR=./uploads
# Maximum upload size in bytes (10MB default)
MAX_UPLOAD_SIZE=10485760

# Rate Limiting (Optional)
# Requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# OpenAI Model Configuration (Optional - defaults shown)
# OPENAI_MODEL_VISION=gpt-4-vision-preview
# OPENAI_MODEL_TEXT=gpt-4
# OPENAI_MAX_TOKENS=2000
# OPENAI_TEMPERATURE=0.7

# API Version
API_VERSION=v1

# Environment
ENVIRONMENT=development
# Options: development, staging, production
